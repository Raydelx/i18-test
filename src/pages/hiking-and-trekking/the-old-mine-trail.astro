---
import Container from "../../components/container.astro";
import InformationProducts from "../../components/ui/informationProducts.astro";
import Icon from "../../components/Icon.astro";
import Layout from "../../layouts/Layout.astro";
import SliderReact from "../../hooks/SliderReact";
import Days from "@/components/products-components/days.astro";
import Includes from "@/components/products-components/includes.astro";
import Route from "@/components/ui/icons/route.astro";
import Dots from "@/components/ui/dots.astro";
import Widget from "@/components/products-components/widget.astro";
import Cancellation from "@/components/products-components/cancellation.astro";

// Duplica y cambia las rutas para añadir o modificar las fotos

const IMG = [
  {
    src: "/hiking-and-trekking/the-old-mine-trail/tomt-1.webp",
  },
  {
    src: "/hiking-and-trekking/the-old-mine-trail/tomt-2.webp",
  },
  {
    src: "/hiking-and-trekking/the-old-mine-trail/tomt-3.webp",
  },
  {
    src: "/hiking-and-trekking/the-old-mine-trail/tomt-4.webp",
  },
  {
    src: "/hiking-and-trekking/the-old-mine-trail/tomt-5.webp",
  },
];
const DAYS = [
  {
    day: "1",
    tecnicalInfo: true,
    description:
      "One of the most beautiful routes in Sierra Nevada National Park is the Old Mine Trail.  This historic path, built at the end of the 19th century to access the mines, follows the Genil River toward the confluence of several rivers at the very end of the valley. The valley reveals its stunning scenery, including the rugged north faces of the highest peaks in the Sierra Nevada: Mulhacén, Veleta, and Alcazaba. Throughout the day you come across ruins of stone buildings, old mine tunnels, and the typical Iberian Ibex or the golden eagles are common to see. To get to the starting point of the trail we drive approx. 30 min. to the beautiful village of Güéjar Sierra, a mountain town located at 1.000 meters on the northwestern slope of the Sierra Nevada National Park.",
    description2:
      "We have two variants with different levels of hiking difficulty.",
    description3:
      "(Check out our blog for more information about our hiking grades)",
    techical_optional: "First loop",
    totalDistance: "22 KM",
    totalAscent: "1000 M",
    totalDescent: "1000 M",
    duration: "7 - 8 hours",

    totalDistance2: "15 KM",
    totalAscent2: "800 M",
    totalDescent2: "800 M",
    duration2: "6 hours",
    physical_difficulty: "C",
    technical_difficulty: "B",
    techical_optional2: "Second  loop",
    physical_difficulty2: "B",
    technical_difficulty2: "B",
  },
];

const brings = [
  {
    title: "water bottle min. 1.5 L",
  },
  {
    title: "Picnic",
  },
  {
    title: "Light backpack",
  },
  {
    title: "Weather-appropriate and comfortable clothing",
  },
  {
    title: "Hiking jacket",
  },
  {
    title: "Hiking shoes, not open shoes!",
  },
  {
    title: "Sun protection",
  },
  {
    title: "Rain gear",
  },
  {
    title: "Waterproof Rain cover backpack",
  },
  {
    title: "Gloves",
  },
  {
    title: "Warm hat",
  },
  {
    title: "Neck gaiter",
  },
  {
    title: "Trekking poles",
  },
];
---

<Layout title="">
  <Container>
    <main class="mt-16">
      <!-- Foto, nombre y destino -->

      <div
        class="bg-center bg-no-repeat bg-[url('/public/hiking-and-trekking/the-old-mine-trail/tomt-principal.webp')] h-[25rem] rounded-2xl bg-cover">
        <div class="flex flex-col justify-end h-full p-6 w-auto bg-cover">
          <div class="flex gap-2 [text-shadow:_0_2px_4px_rgb(0_0_0_/_0.8)]">
            <Icon icon="destiny-logo" size="1.6rem" color="gray" />
            <p
              class="text-xl font-normal text-white lg:text-2xl flex flex-col justify-end h-full [text-shadow:_0_2px_4px_rgb(0_0_0_/_0.8)]">
              Sierra Nevada National Park
            </p>
          </div>

          <h1
            class="text-3xl font-extrabold tracking-tight leading-none text-white md:text-4xl lg:text-5xl [text-shadow:_0_2px_4px_rgb(0_0_0_/_0.8)]">
            The Old Mine Trail
          </h1>
        </div>
      </div>

      <!-- Informacion general de los viajes -->

      <div
        class="grid grid-cols-2 md:grid-cols-6 h-auto mt-3 gap-3 place-content-start md:px-6">
        <InformationProducts title="Price" subtitle="40 (6 pax.)">
          <div slot="icon">
            <Icon icon="price-logo" size="1.6rem" color="#0E46A3" />
          </div>
        </InformationProducts>
        <InformationProducts title="Pre-booking" subtitle="100%">
          <div slot="icon">
            <Icon icon="price-logo" size="1.6rem" color="#0E46A3" />
          </div>
        </InformationProducts>
        <InformationProducts title="Minimum of persons" subtitle="2">
          <div slot="icon">
            <Icon icon="group-logo" size="1.6rem" color="#0E46A3" />
          </div>
        </InformationProducts>
        <InformationProducts
          title="Duration Trail"
          subtitle="Trail 1: 7-8 hours"
          subtitle3="Trail 2: 6-7 hours">
          <div slot="icon">
            <Icon icon="timer-logo" size="1.6rem" color="#0E46A3" />
          </div>
        </InformationProducts>
        <InformationProducts title="Tour type" subtitle="Guided">
          <div slot="icon">
            <Icon icon="guide-logo" size="1.6rem" color="#0E46A3" />
          </div>
        </InformationProducts>
        <InformationProducts title="Season" subtitle="All year">
          <!-- <div slot="icon">
            <Icon icon="autumn-logo" size="1.6rem" color="#0E46A3" />
          </div> -->
        </InformationProducts>
      </div>

      <!-- Informacion tecnica -->

      <div class="">
        <div
          class="grid grid-cols-2 justify-between md:grid-cols-6 h-auto mt-3 gap-3 md:px-6">
          <InformationProducts
            title="Total distance"
            subtitle="Trail 1: 22 km"
            subtitle3="Trail 2: 15 km">
            <div slot="icon">
              <Icon icon="distance-logo" size="1.6rem" color="#0E46A3" />
            </div>
          </InformationProducts>

          <InformationProducts
            title="Total ascent"
            subtitle="Trail 1: 1.000 m"
            subtitle3="Trail 2: 800 m">
            <div slot="icon">
              <Icon icon="up-logo" size="1.6rem" color="#0E46A3" />
            </div>
          </InformationProducts>
          <InformationProducts
            title="Total descent"
            subtitle="Trail 1: 1000 m"
            subtitle3="Trail 2: 800 m">
            <div slot="icon">
              <Icon icon="down-logo" size="1.6rem" color="#0E46A3" />
            </div>
          </InformationProducts>
          <InformationProducts title="Route type" subtitle="Loop Trail">
            <div slot="icon">
              <Route />
            </div>
          </InformationProducts>
          <InformationProducts
            title="Physical Difficulty"
            subtitle="Trail 1: C"
            subtitle3="Trail 2: B"
          />
          <InformationProducts
            title="Technical Difficulty"
            subtitle="Trail 1: B"
            subtitle3="Trail 2: B"
          />
        </div>
      </div>

      <!--  Include, exclude, complementaries  -->
      <div
        class="grid md:grid-cols-2 lg:grid-cols-2 mt-20 md:mt-26 md:mb-36 gap-16 md:gap-4">
        <!-- Include -->
        <Includes title="Included">
          <ul slot="description" class="mt-4 flex flex-col gap-2">
            <li class="flex flex-wrap gap-2">
              <Icon icon="check-logo" size="1.6rem" color="#0E46A3" />
              <p class="max-w-[320px] text-md">
                Professional qualified mountain leader
              </p>
            </li>
            <li class="flex flex-wrap gap-2">
              <Icon icon="check-logo" size="1.6rem" color="#0E46A3" />
              <p class="max-w-[320px] text-md">
                Liability insurance and assistance
              </p>
            </li>
            <li class="flex flex-wrap gap-2">
              <Icon icon="check-logo" size="1.6rem" color="#0E46A3" />
              <p class="max-w-[320px] text-md">Transfer</p>
            </li>
          </ul>
        </Includes>
        <!-- Exclude -->
        <Includes title="Not Included">
          <div slot="description" class="flex flex-col gap-2 mt-4">
            <li class="flex flex-wrap gap-2">
              <Icon icon="uncheck-logo" size="1.6rem" color="#0E46A3" />
              <p class="max-w-[320px] text-md">Snack and lunch</p>
            </li>
          </div>
        </Includes>
        <!-- Complementaries -->
      </div>
    </main>

    <div
      class="grid md:grid-cols-2 h-auto gap-10 md:gap-20 md:py-36 py-10 items-center">
      <div class="static h-[385px] hidden md:block">
        <img
          class="rounded-xl absolute md:w-[20rem] lg:w-[25rem] hover:z-40 transition-all duration-300 ease-out hover:scale-105"
          src="/hiking-and-trekking/the-old-mine-trail/tomt-1.webp"
          alt="ciclista mirando la sierra con cicicleta a su lado"
        />
        <img
          class="rounded-xl absolute md:w-[10rem] lg:w-[12rem] md:mt-48 lg:mt-60 ml-6 z-10 grayscale-[60%] hover:grayscale-0 transition-all duration-300 ease-out hover:scale-105"
          src="/hiking-and-trekking/the-old-mine-trail/tomt-3.webp"
          alt="ciclista mirando la sierra con cicicleta a su lado"
        />
        <img
          class="rounded-xl absolute md:w-[10rem] lg:w-[15em] ml-64 md:-mt-24 lg:-mt-32 grayscale-[60%] hover:grayscale-0 transition-all duration-300 ease-out hover:scale-105"
          src="/hiking-and-trekking/the-old-mine-trail/tomt-4.webp"
          alt="ciclista mirando la sierra con cicicleta a su lado"
        />
      </div>

      <div class="grid gap-5">
        <div class="grid grid-flow-row gap-4">
          <h2
            class="max-w-2xl mb-4 md:px-0 font-bold text-4xl md:text-5xl xl:text-6xl">
            Availability
          </h2>
          <div class="flex gap-2">
            <Icon icon="spring-logo" size="1.6rem" color="#0E46A3" />
            <p class="max-w-2xl text-gray-900 mb-2 md:px-0 text-xl md:text-xl">
              All Year
            </p>
          </div>
        </div>

        <div class="">
          <h2
            class="max-w-2xl mb-4 md:px-0 font-bold text-4xl md:text-5xl xl:text-6xl">
            Highlight
          </h2>
          <p class="text-lg text-gray-900 mb-1">
            <span class="text-xl">🔹</span> Sierra Nevada National Park
          </p>
          <p class="text-lg text-gray-900 mb-1">
            <span class="text-xl">🔹</span> Spectacular views from the north face
            of the Sierra Nevada Mountain Range
          </p>
          <p class="text-lg text-gray-900 mb-1">
            <span class="text-xl">🔹</span> The old mines
          </p>
          <p class="text-lg text-gray-900 mb-1">
            <span class="text-xl">🔹</span> The iconic chestnut tree
          </p>
          <p class="text-lg text-gray-900 mb-1">
            <span class="text-xl">🔹</span> Great diversity of flora
          </p>
          <p class="text-lg text-gray-900 mb-1">
            <span class="text-xl">🔹</span> Outdoors picnic
          </p>
        </div>
      </div>
    </div>

    <Widget
      title="What to bring for Hiking"
      description="Weather is important to consider while packing for your outdoor activity. Your packing list is based on your comfort and sensitivity. Layering your clothes is the best way to travel and be outdoors. It is highly recommended as the best way to stay warm and cool, as the weather is bound to change in the mountains."
      img="/hiking-and-trekking/trekking-alpujarras/bring.webp"
      text="Any questions about the material's recommendations, contact us or check our blog, “What to Bring for Hiking.” "
      brings={brings}
    />

    <!-- Button to download PDF -->
    <section class="grid md:grid-cols-2 gap-10">
      <div class="">
        <h2
          class="max-w-2xl mb-4 md:px-0 font-bold text-4xl md:text-5xl xl:text-6xl">
          Requirements
        </h2>
        <p class="text-lg text-gray-900 mb-1">
          <span class="text-xl strong">🔹</span> Good physical fitness
        </p>
        <p class="text-lg text-gray-900">
          <span class="text-xl">🔹</span> Minimum age: 16 years + habit of walking
        </p>
        <p class="text-lg text-gray-900">
          <span class="text-xl">🔹</span> Closed shoes, no open shoes!
        </p>
        <p class="text-lg text-gray-900">
          <span class="text-xl">🔹</span> Basic hiking gear is required (Check our
          blog for more information about hiking gear)
        </p>
      </div>
    </section>
    <section class="grid md:grid-cols-2 gap-6 items-center">
      <Cancellation />
      <div class="flex flex-col gap-2 md:p-4">
        <div>
          <h3 class="text-4xl md:text-5xl xl:text-6xl font-bold">Price:</h3>
          <Dots class="mb-4" />
        </div>

        <p>2 - 4 people - 70 € p.p</p>
        <p>5 people - 50 € p.p</p>
        <p>6 people - 45 € p.p</p>
        <p>7 people - 40 € p.p</p>
      </div>
    </section>

    <!-- Slider Photos -->
    <section class="m-auto md:w-full rounded-xl md:px-8 md:py-20">
      <ol class="relative mt-16">
        {(<SliderReact IMG={IMG} client:visible />)}
      </ol>
    </section>

    <!--  TimeLine per days  -->
    <h2 class="text-4xl md:text-5xl xl:text-6xl md:p-8 mt-16 font-bold mb-4">
      What to expect
    </h2>
    {
      DAYS.map((tour) => (
        <ol class="mb-10">
          <Days {...tour} />
        </ol>
      ))
    }
  </Container>
</Layout>
