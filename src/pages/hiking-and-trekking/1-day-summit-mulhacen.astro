const brings = [
  {
    title: "Water minimum 2 L",
  },

  {
    title: "Picnic (sandwich, chocolate, dried fruit, etc.)",
  },
  {
    title: "Light backpack (20-30L)",
  },
  {
    title: "Weather-appropriate and technical clothing",
  },
  {
    title: "Hiking jacket",
  },
  {
    title: "Hiking shoes",
  },
  {
    title: "Sun protection",
  },
