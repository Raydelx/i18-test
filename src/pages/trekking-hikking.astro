    href_img:
      "/hiking-and-trekking/family-hike-gorge-of-sierra-nevada/fh-product.webp",
    alt_img: "string",
  },
  {
    name: "King of The Low Mountains",
    description: "",
    href: "/hiking-and-trekking/king-of-the-low-mountains/",
    href_img: "/hiking-and-trekking/king-of-the-mountain/kom-product.webp",
    alt_img: "string",
  },
  {
    name: "Sunrise Sierra Nevada",
    description: "",
    href: "/hiking-and-trekking/sunrise-sierra-nevada/",
    href_img: "/hiking-and-trekking/sunrise-sierra-nevada/sr-product.webp",
    alt_img: "string",
  },
  {
    name: "Trekking Alpujarras",
    description: "",
    href: "/hiking-and-trekking/trekking-alpujarras/",
    href_img: "/hiking-and-trekking/trekking-alpujarras/ta-product.webp",
    alt_img: "string",
  },
  {
    name: "The Old Mine Trail",
    description: "",
    href: "/hiking-and-trekking/the-old-mine-trail/",
    href_img: "/hiking-and-trekking/the-old-mine-trail/tomt-product.webp",
    alt_img: "string",
  },
  {
    name: "1-Day Summit Mulhacén",
    description: "",
