---
import TeamItem from "./teamItem.astro";
import { getI18N } from "@/i18n/";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<figure class="max-w-screen-md mx-auto text-center px-5 mt-4">
  <svg
    class="w-10 h-10 mx-auto mb-3 text-gray-400 dark:text-gray-600"
    aria-hidden="true"
    xmlns="http://www.w3.org/2000/svg"
    fill="currentColor"
    viewBox="0 0 18 14">
    <path
      d="M6 0H2a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3H2a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Zm10 0h-4a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3h-1a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Z"
    ></path>
  </svg>
  <blockquote>
    <p class="text-2xl italic font-medium text-gray-900">
      "{i18n.ABOUT.QUOTE}"
    </p>
  </blockquote>
  <figcaption
    class="flex items-center justify-center mt-6 space-x-3 rtl:space-x-reverse">
    <img class="w-6 h-6 rounded-full" src="/michel.png" alt="Michael picture" />
    <div
      class="flex items-center divide-x-2 rtl:divide-x-reverse divide-gray-500">
      <cite class="pe-3 font-medium text-gray-900">Michael Hugo</cite>
      <cite class="ps-3 text-sm text-gray-500">{i18n.ABOUT.QUOTE_1}</cite>
    </div>
  </figcaption>
</figure>
<TeamItem
  name="Michael Hugo Vanrapenbusch"
  charge={i18n.ABOUT.MICHAEL_CHARGE}
  nationality={i18n.ABOUT.MICHAEL_NATIONALITY}
  idioms={i18n.ABOUT.MICHAEL_LENGUAGES}
  cualification={i18n.ABOUT.MICHAEL_QUALIFICATION}
  src="/michel.png"
  alt="michael with helmet smiling"
  class="bg-gradient-to-r from-violet-200 to-cyan-200"
  ><img class="h-20" slot="logo" src="/asisiacion-guias.png" alt="" />
  <img class="h-20" slot="logo" src="/uimla.webp" alt="" />
</TeamItem>

<TeamItem
  name="Jose Vicente Castro Lopez"
  charge={i18n.ABOUT.JOSE_CHARGE}
  nationality={i18n.ABOUT.JOSE_NATIONALITY}
  idioms={i18n.ABOUT.JOSE_LENGUAGES}
  cualification={i18n.ABOUT.JOSE_QUALIFICATION}
  src="/castro.png"
  alt="Michael Project manager"
  class="bg-gradient-to-r from-violet-200 to-cyan-200">
  <div slot="logo">
    <div><slot name="logo" /></div>
  </div></TeamItem
>
<TeamItem
  name="Maria Egea Molina"
  charge={i18n.ABOUT.MARIA_CHARGE}
  nationality={i18n.ABOUT.MARIA_NATIONALITY}
  idioms={i18n.ABOUT.MARIA_LENGUAGES}
  cualification={i18n.ABOUT.MARIA_QUALIFICATION}
  src="/maria2.png"
  alt="Maria Operation Coordinator"
  class="bg-gradient-to-r from-violet-200 to-cyan-200"
/>
<TeamItem
  name="Manuel Baeza"
  charge={i18n.ABOUT.MANUEL_CHARGE}
  nationality={i18n.ABOUT.MANUEL_NATIONALITY}
  idioms={i18n.ABOUT.MANUEL_LENGUAGES}
  cualification={i18n.ABOUT.MANUEL_QUALIFICATION}
  src="/manolo.png"
  alt="Maniel Baeza"
  class="bg-gradient-to-r from-blue-200 to-cyan-200"
/>
<TeamItem
  name="Anxo"
  charge={i18n.ABOUT.ANXO_CHARGE}
  nationality={i18n.ABOUT.ANXO_NATIONALITY}
  idioms={i18n.ABOUT.ANXO_LENGUAGES}
  cualification={i18n.ABOUT.ANXO_QUALIFICATION}
  src="/anxo.png"
  alt="Maniel Baeza"
  class="bg-gradient-to-r from-blue-200 to-cyan-200"
  ><img
    class="h-20"
    slot="logo"
    src="/asisiacion-guias.png"
    alt="asociacion guias"
  />
  <img class="h-20" slot="logo" src="/uimla.webp" alt="uimla logo" /></TeamItem
>
