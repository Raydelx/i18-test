---
import Dots from "../ui/dots.astro";
import { getI18N } from "@/i18n/";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<div class="grid">
  <div>
    <h2 class="md:px-0 font-bold text-4xl md:text-5xl xl:text-6xl">
      {i18n.CANCELLATION.TITLE}
      <Dots class="mb-4" />
    </h2>

    <div>
      <h3 class="md:px-0 font-bold text-2xl md:text-3xl xl:text-4x">
        {i18n.CANCELLATION.SUBTITLE}
      </h3>

      <p class="text-lg text-gray-700 mt-1">
        {i18n.CANCELLATION.TEXT_1}
      </p>
      <p class="text-lg text-gray-700 mt-1">{i18n.CANCELLATION.TEXT_2}</p>
    </div>
  </div>
</div>
