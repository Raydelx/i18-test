                {
                  i18n.PRODUCTS.CULTURAL_TRAVELS
                    .BREATHTAKING_ROAD_TRIP_ALPUJARRAS.INCLUDED.TEXT_4
                }
              </p>
            </li>
          </div>
        </Includes>
        <!-- Exclude -->
        <Includes title={i18n.INCLUDES.NOT_INCLUDED}>
          <div slot="description" class="flex flex-col gap-2 mt-4">
            <li class="flex gap-2">
              <Icon icon="uncheck-logo" size="1.6rem" color="#0E46A3" />
              <p class="max-w-[320px] text-md">
                {
                  i18n.PRODUCTS.CULTURAL_TRAVELS
                    .BREATHTAKING_ROAD_TRIP_ALPUJARRAS.NOT_INCLUDED.TEXT_1
                }
              </p>
            </li>
            <li class="flex gap-2">
              <Icon icon="uncheck-logo" size="1.6rem" color="#0E46A3" />
              <p class="max-w-[320px] text-md">
                {
                  i18n.PRODUCTS.CULTURAL_TRAVELS
                    .BREATHTAKING_ROAD_TRIP_ALPUJARRAS.NOT_INCLUDED.TEXT_2
                }
              </p>
            </li>
          </div>
        </Includes>
        <!-- Complementaries -->
        <Includes title={i18n.INCLUDES.EXTRA}>
          <div slot="description" class="flex flex-col gap-2 mt-4">
            <li class="flex gap-2">
              <Icon icon="complement-logo" size="1.6rem" color="#0E46A3" />
              <p class="max-w-[320px] text-md">
                {
                  i18n.PRODUCTS.CULTURAL_TRAVELS
