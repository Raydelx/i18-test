---

<Layout title="Gravel Bike / MTB">
  <Container>
    <main class="mt-16">
      <!-- Foto, nombre y destino -->

      <div
        class="bg-center bg-no-repeat bg-[url('/cultural-travels/a-breathtaking-road-trip-through-the-alpujarras/alp-principal.webp')] bg-cover h-[25rem] rounded-2xl">
        <div class="flex flex-col justify-end h-full p-6 w-auto">
          <div class="flex gap-2">
            <Icon icon="destiny-logo" size="1.6rem" color="white" />
            <p
              class="text-xl font-normal text-white lg:text-2xl flex flex-col justify-end h-full [text-shadow:_0_2px_4px_rgb(0_0_0_/_0.8)]">
              {
                i18n.PRODUCTS.CULTURAL_TRAVELS.BREATHTAKING_ROAD_TRIP_ALPUJARRAS
                  .LOCATION
              }
            </p>
          </div>

          <h1
            class="text-3xl font-extrabold tracking-tight leading-none text-white md:text-4xl lg:text-5xl [text-shadow:_0_2px_4px_rgb(0_0_0_/_0.8)]">
            {
              i18n.PRODUCTS.CULTURAL_TRAVELS.BREATHTAKING_ROAD_TRIP_ALPUJARRAS
                .TITLE
            }
          </h1>
        </div>
      </div>

      <!-- Informacion general de los viajes -->

      <div
        class="grid grid-cols-2 md:grid-cols-6 h-auto mt-3 gap-3 place-content-start md:px-6">
        <InformationProducts
          title={i18n.INFORMATION_PRODUCTS.PRICE}
          subtitle={i18n.PRODUCTS.CULTURAL_TRAVELS
            .BREATHTAKING_ROAD_TRIP_ALPUJARRAS.PRICE}>
          <div slot="icon">
            <Icon icon="price-logo" size="1.6rem" color="#0E46A3" />
          </div>
        </InformationProducts>
        <InformationProducts
          title={i18n.INFORMATION_PRODUCTS.PRE_BOOKING}
          subtitle={i18n.PRODUCTS.CULTURAL_TRAVELS
            .BREATHTAKING_ROAD_TRIP_ALPUJARRAS.PRE_BOOKING}>
          <div slot="icon">
            <Icon icon="price-logo" size="1.6rem" color="#0E46A3" />
          </div>
        </InformationProducts>
        <InformationProducts
          title={i18n.INFORMATION_PRODUCTS.MINUMUM_OF_PERSONS}
          subtitle={i18n.PRODUCTS.CULTURAL_TRAVELS
            .BREATHTAKING_ROAD_TRIP_ALPUJARRAS.MINUMUM_OF_PERSONS}>
          <div slot="icon">
            <Icon icon="group-logo" size="1.6rem" color="#0E46A3" />
          </div>
        </InformationProducts>
        <InformationProducts
          title={i18n.INFORMATION_PRODUCTS.DURATION}
          subtitle={i18n.PRODUCTS.CULTURAL_TRAVELS
            .BREATHTAKING_ROAD_TRIP_ALPUJARRAS.DURATION}>
          <div slot="icon">
            <Icon icon="timer-logo" size="1.6rem" color="#0E46A3" />
          </div>
        </InformationProducts>
        <InformationProducts
          title={i18n.INFORMATION_PRODUCTS.ROUTE_TYPE}
          subtitle={i18n.PRODUCTS.CULTURAL_TRAVELS
            .BREATHTAKING_ROAD_TRIP_ALPUJARRAS.ROUTE_TYPE}>
          <div slot="icon">
            <Icon icon="guide-logo" size="1.6rem" color="#0E46A3" />
          </div>
        </InformationProducts>
        <InformationProducts
          title={i18n.INFORMATION_PRODUCTS.SEASON}
          subtitle2={i18n.PRODUCTS.CULTURAL_TRAVELS
            .BREATHTAKING_ROAD_TRIP_ALPUJARRAS.SEASON}>
          <!-- <div slot="icon">
            <Icon icon="autumn-logo" size="1.6rem" color="#0E46A3" />
          </div> -->
        </InformationProducts>
      </div>

      <!-- Informacion tecnica -->

      <!--  Include, exclude, complementaries  -->
      <div
        class="grid md:grid-cols-2 lg:grid-cols-3 mt-20 md:mt-26 md:mb-36 gap-16 md:gap-4">
        <!-- Include -->
        <Includes title={i18n.INCLUDES.INCLUDED}>
          <div slot="description" class="mt-4 flex flex-col gap-2">
            <li class="flex gap-2">
              <Icon icon="check-logo" size="1.6rem" color="#0E46A3" />
              <p class="max-w-[320px] text-md">
                {
                  i18n.PRODUCTS.CULTURAL_TRAVELS
                    .BREATHTAKING_ROAD_TRIP_ALPUJARRAS.INCLUDED.TEXT_1
                }
              </p>
            </li>
            <li class="flex gap-2">
              <div>
                <Icon icon="check-logo" size="1.6rem" color="#0E46A3" />
