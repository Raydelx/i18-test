        </div>
      </div>

      <!-- Button to download PDF -->
      <section class="grid md:grid-cols-2 gap-6">
        <Cancellation />
        <div class="flex flex-col gap-2 md:p-4">
          <div>
            <h3 class="text-4xl md:text-5xl xl:text-6xl font-bold">
              {
                i18n.PRODUCTS.CULTURAL_TRAVELS.BREATHTAKING_ROAD_TRIP_ALPUJARRAS
                  .PRICES
              }
            </h3>
            <Dots class="mb-4" />
          </div>
          <p class="text-gray-700">
            {
              i18n.PRODUCTS.CULTURAL_TRAVELS.BREATHTAKING_ROAD_TRIP_ALPUJARRAS
                .PRICES_TEXT_1
