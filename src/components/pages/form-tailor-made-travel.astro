---
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import TarilorMadeForm from "@/components/tarilorMadeForm.astro";
import Layout from "@/layouts/Layout.astro";
import { getI18N } from "@/i18n/";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">{i18n.FORM_TAILOR.TITLE}</Fragment>
      <Fragment slot="desc">{i18n.FORM_TAILOR.SUBTITLE}</Fragment>
    </Sectionhead>

    <div class="grid gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <TarilorMadeForm />
      </div>
    </div>
  </Container>
</Layout>
