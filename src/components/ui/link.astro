---
import Icon from "../Icon.astro";

interface Props {
  href: string;
  size?: "md" | "lg";
  block?: boolean;
  style?: "outline" | "primary" | "inverted" | "muted";

  icon?: string;
  [x: string]: any;
}

const {
  href,
  block,
  size = "lg",
  style = "primary",

  class: className,
  ...rest
} = Astro.props;

const sizes = {
  lg: "px-5 py-2.5",
  md: "px-4 py-2",
};

const styles = {
  outline: "bg-white border-2 border-black hover:bg-gray-100 text-black ",
  primary:
    "bg-[#0E46A3] text-white hover:bg-[#074173]  border-2 border-transparent",
  inverted:
    "bg-white text-black hover:bg-[#9AC8CD] hover:text-[#074173]   border-2 hever:border-[#074173]",
  muted: "bg-gray-100 hover:bg-gray-200   border-2 border-transparent",
};
---

<a
  href={href}
  {...rest}
  class:list={[
    "rounded text-center flex gap-2  justify-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</a>
